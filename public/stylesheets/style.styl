$color_main 	= rgba(117,  7,135,1.0)
$color_topic 	= rgba(255,255,255,0.7)
$color_back 	= rgba(  0,  0,  0,1.0)
$color_fore 	= rgba(  0,  0,  0,0.5)
$color_hint 	= rgba(117,  7,135,0.3)

$font_normal = Helvetica, STHeiti, "Microsoft JhengHei", "微軟正黑體", PMingLiU, "Lucida Grande", Arial, sans-serif

$height_header = 50px
$height_footer = 30px

// Bootstap's variables, note @screen-xs-min is defined by Less, not Bootstrap.
$screen-lg = 1200px		// Large devices (large desktops)
$screen-md = 992px		// Medium devices (desktops)
$screen-sm = 768px		// Small devices (tablets, under this size called extreme small, i.e., phones)
$screen-md-max = $screen-lg - 1
$screen-sm-max = $screen-md - 1
$screen-xs-max = $screen-sm - 1

transition(setting)
	-webkit-transition: setting
	-moz-transition: setting
	-o-transition: setting
	transition: setting

transform(setting)
	-webkit-transform: setting
	-moz-transform: setting
	-o-transform: setting
	transform: setting

/***************
 * General
 ***************/
html, body
	overflow-x: hidden
	height: 100%

body
	width: $width_max
	margin: 0 auto
	padding: 0
	font-family: $font_normal
	// font-size: 62.5% /* Let 1em = 10px */ 
	font-size: 14px
	overflow-y: scroll
	-webkit-overflow-scrolling: touch
	background-color: $color_back
	background-image: url('/images/background.jpg')
	background-repeat: no-repeat
	background-attachment: fixed
	background-position: center
	
img
	position: absolute
	right: 0px
	bottom: $height_footer
	width: 100%

.main_dialog
	padding: 20px
	font-size: 20px
	color: $color_topic
	bottom: $height_footer
	background-color: $color_hint

.progress
	padding: 10px 10px 10px 10px
	background-color: $color_fore

#story
	left: 200px
	width: 500px
	display: block

.page
	padding-top: 30px + $height_header
	padding-bottom: 30px + $height_footer
	min-height: 100%

a:link, a:visited
	color: $color_main
	text-decoration: none

table
	width: 100%
	text-align: center
	th, td
		padding: 3px 5px

.todos
	color: #f00
	margin-top: 20px
	&::before
		content: '未完成開發備註：'

.modal-dialog
	margin-top: 100px
	.modal-header
		border-radius: 6px 6px 0 0

/***************
 * Header & Footer
 ***************/
#header
	margin-bottom: -1 * $height_header
	height: $height_header
	line-height: $height_header
	font-size: 20px
	color: $color_topic
	background-color: $color_back
	-webkit-transform: translate3d(0,0,0)	// for iOS fixed

#footer
	margin-top: -1 * $height_footer
	height: $height_footer
	line-height: $height_footer
	text-align: right
	color: $color_topic
	background-color: $color_back
